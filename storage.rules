rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // モンスター画像は全員読み取り可能
    match /monsters/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // 管理者のみ
    }
    
    // ユーザーアバターは本人のみ書き込み可能
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
