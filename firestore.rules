// firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ========================================
    // マスターデータ（読み取り専用）
    // ========================================
    
    match /monster_masters/{monsterId} {
      allow read: if true;  // 全員が読める
      allow write: if false;  // 書き込み不可（管理者のみ）
    }
    
    match /skill_masters/{skillId} {
      allow read: if true;
      allow write: if false;
    }
    
    match /equipment_masters/{equipmentId} {
      allow read: if true;
      allow write: if false;
    }
    
    match /trait_masters/{traitId} {
      allow read: if true;
      allow write: if false;
    }
    
    // ========================================
    // ユーザーデータ（認証済みユーザーのみ）
    // ========================================
    
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /user_monsters/{monsterDocId} {
      allow read, write: if request.auth != null && 
                           resource.data.user_id == request.auth.uid;
    }
    
    match /user_equipment/{equipmentDocId} {
      allow read, write: if request.auth != null && 
                           resource.data.user_id == request.auth.uid;
    }
  }
}